<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="#142938"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/tv_site_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="@dimen/marginNormal"
                android:paddingTop="@dimen/marginNormal"
                android:text="xxxx도서관"
                android:textColor="#fff"
                android:textSize="@dimen/textMediumLarge" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightMiddleLow"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/marginNarrow"
                android:src="@drawable/title_logo" />
        </RelativeLayout>
    </LinearLayout>

</com.google.android.material.appbar.AppBarLayout>
