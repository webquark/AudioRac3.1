<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2E2D2D" />
        </shape>
    </item>
    <item android:bottom="1dp"  android:top="1dp" >
        // add android:right="5dp" and android:left="5dp" for border on left and right
        <shape android:shape="rectangle">
            <solid android:color="#F0EDED" />
            <padding android:left="@dimen/marginNormal" android:top="@dimen/marginLine" android:right="@dimen/marginNormal" android:bottom="@dimen/marginLine"/>
        </shape>
    </item>
</layer-list>